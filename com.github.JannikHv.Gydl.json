{
  "app-id": "com.github.JannikHv.Gydl",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "sdk": "org.gnome.Sdk",
  "command": "gydl",
  "rename-icon": "gydl",
  "copy-icon": true,
  "finish-args": [
     "--socket=wayland",
     "--socket=x11",
     "--share=ipc",     
     "--share=network",
     "--filesystem=xdg-download"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig"
  ],
  "modules": [
    "shared-modules/lame/lame-3.99.5.json",
    {
      "name": "ffmpeg",
      "config-opts": [
        "--enable-shared",
        "--disable-static",
        "--disable-doc",
        "--disable-ffplay",
        "--disable-devices",
        "--enable-gnutls",
        "--enable-libmp3lame",
        "--enable-libvorbis"
      ],
      "sources": [{
        "type": "archive",
        "url": "https://ffmpeg.org/releases/ffmpeg-4.0.2.tar.gz",
        "sha256": "a56ef203c14ffab56b97690a1005522cfa0dc2c42c3c40c33c0bec4875b706eb"
      }],
      "post-install": [
        "install -Dm644 COPYING.LGPLv3 /app/share/licenses/ffmpeg/COPYING"
      ],
      "cleanup": ["/share/ffmpeg"]
    },
    {
      "name": "youtube-dl",
      "sources": [{
        "type": "archive",
        "url": "https://github.com/rg3/youtube-dl/archive/2018.10.05.tar.gz",
        "sha256": "86551c40638e562f8b99ac4b497b78d0fd4564ee1642e9358ff39adef8afd183"
      }],
      "buildsystem": "simple",
      "build-commands": ["python3 -mpip install . --prefix=/app --no-index --find-links ."],
      "cleanup": ["/etc", "/share/doc"]
    },
    {
      "name": "gydl",
      "buildsystem": "meson",
      "sources": [{
        "type": "git",
        "url": "https://github.com/JannikHv/gydl.git",
        "commit": "18d4819511c668b2e1225aabb3de5bcab48b1c46"
      }],
      "post-install": [
        "install -Dm644 ../LICENSE /app/share/licenses/gydl/LICENSE"
      ]
    }
  ]
}
